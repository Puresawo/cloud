{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "imageTemplateName": {
        "type": "string"
        },
        "api-version": {
          "type": "string"
        },
        "svclocation": {
            "type": "string"
        }
    },
    
    "variables": {
    },


    "resources": [
      {
        "name": "[parameters('imageTemplateName')]",
        "type": "Microsoft.VirtualMachineImages/imageTemplates",
        "apiVersion": "[parameters('api-version')]",
        "location": "[parameters('svclocation')]",
        "dependsOn": [],
        "tags": {
            "imagebuilderTemplate": "AzureImageBuilderSIG",
            "userIdentity": "enabled"
                },
            "identity": {
                "type": "UserAssigned",
                        "userAssignedIdentities": {
                        "<imgBuilderId>": {}
                            
                    }
                    },
        
        "properties": {
            "buildTimeoutInMinutes" : 120,

            "vmProfile": 
                    {
                    "vmSize": "Standard_D2_v2",
                    "osDiskSizeGB": 127
                    },
        
            "source": {
                "type": "PlatformImage",
                    "publisher": "MicrosoftWindowsDesktop",
                    "offer": "windows-10",
                    "sku": "21h1-ent",
                    "version": "latest"
            },
            "customize": [

        
                    {
                        "type": "PowerShell",
                        "name": "OptimizeOS",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/danielsollondon/azvmimagebuilder/master/solutions/14_Building_Images_WVD/1_Optimize_OS_for_WVD.ps1"
                    },
					{
						"type": "PowerShell",
						"name": "GetAzCopy",
						"inline": [
						"New-Item -Type Directory -Path 'c:\\' -Name temp",
						"invoke-webrequest -uri 'https://aka.ms/downloadazcopy-v10-windows' -OutFile 'c:\\temp\\azcopy.zip'",
						"Expand-Archive 'c:\\temp\\azcopy.zip' 'c:\\temp'",
						"copy-item 'C:\\temp\\azcopy_windows_amd64_*\\azcopy.exe\\' -Destination 'c:\\temp'"
						]
					},
					{
						"type": "PowerShell",
						"name": "GetLangRegionArchive",
						"inline": [
						"c:\\temp\\azcopy.exe copy 'https://csb1003200160d413e4.blob.core.windows.net/aibmedias/LangRegion.zip?sp=r&st=2022-03-30T10:16:12Z&se=2022-04-06T18:16:12Z&spr=https&sv=2020-08-04&sr=b&sig=JY77EXgt3i%2Fe0acFOVvdTSkAICTA7a4AehCmnR6SA1Y%3D' c:\\temp\\LangRegion.zip",
						"Expand-Archive 'c:\\temp\\LangRegion.zip' c:\\temp"
						]
					},
					{
                        "type": "PowerShell",
                        "name": "InstallLangPackFi",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/Puresawo/cloud/main/LangPackFi2.ps1"
                    },
					{
                        "type": "PowerShell",
                        "name": "UpdateInboxAppsMUI",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/Puresawo/cloud/main/UpdateInboxAppsMUI.ps1"
                    },
					{
                        "type": "PowerShell",
                        "name": "ApplyRegionalSettings",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/Puresawo/cloud/main/ApplyRegionalSettings.ps1"
                    },
					{
						"type": "PowerShell",
						"name": "GetDefaultLangArchive",
						"inline": [
						"c:\\temp\\azcopy.exe copy 'https://csb1003200160d413e4.blob.core.windows.net/aibmedias/Language.zip?sp=r&st=2022-03-31T08:39:10Z&se=2022-04-07T16:39:10Z&spr=https&sv=2020-08-04&sr=b&sig=KG0jhZ1S%2BtJZIcNSmEbWKQaQmHN%2FfMW3KNdFqZhB7R0%3D' c:\\temp\\Language.zip",
						"Expand-Archive 'c:\\temp\\Language.zip' c:\\temp"
						]
					},
					{
                        "type": "PowerShell",
                        "name": "RunDefaultLang",
                        "runElevated": true,
                        "runAsSystem": true,
						"script": "c:\\temp\\ChangeOSLanguage.ps1"
                    },
					{
						"type": "PowerShell",
						"name": "GetDisablePrivacyExperience",
						"runElevated": true,
                        "runAsSystem": true,
						"inline": [
						"c:\\temp\\azcopy.exe copy 'https://csb1003200160d413e4.blob.core.windows.net/aibmedias/DisablePrivacyExperience.reg?sp=r&st=2022-03-30T11:01:31Z&se=2022-04-06T19:01:31Z&spr=https&sv=2020-08-04&sr=b&sig=PM%2FE2Uk6DlXft%2BYmmnHPQLlS1QYESTb%2F9bLJrXnq%2BcY%3D' c:\\temp\\DisablePrivacyExperience.reg",
						"Execute-Process -Path 'C:\\Windows\\System32\\cmd.exe' -Parameters '/c reg import c:\\temp\\DisablePrivacyExperience.reg'"
						]
					},
                    {
                        "type": "WindowsRestart",
                        "restartCheckCommand": "write-host 'restarting post Optimizations'",
                        "restartTimeout": "5m"
                    },
                        
                    {
                        "type": "WindowsUpdate",
                        "searchCriteria": "IsInstalled=0",
                        "filters": [
                            "exclude:$_.Title -like '*Preview*'",
                            "include:$true"
                                    ],
                        "updateLimit": 40
                    }

            ],
            "distribute": 
            [
                {   
                    "type": "SharedImage",
                    "galleryImageId": "/subscriptions/<subscriptionID>/resourceGroups/<rgName>/providers/Microsoft.Compute/galleries/<sharedImageGalName>/images/<imageDefName>",
					"location": "<region>",
                    "runOutputName": "<runOutputName>",
                    "artifactTags": {
                        "source": "wvd10",
                        "baseosimg": "windows10"
                    },
					"replicationRegions": [
                      "<region1>"

                    ]
                }
            ]
            }
        }

    
    ]
}    